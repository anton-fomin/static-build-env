{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "lib": ["ES2015", "DOM"],
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "*": ["./src/*", "./src/types/*", "@types/*"]
    }
  },
  "include": ["src", "*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
